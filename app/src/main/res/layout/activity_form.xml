<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    tools:context=".Form">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Property Type"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_back_round"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/property"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Date"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/date"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@color/white2"
                android:text="Property ID"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/propertyid"
                android:background="@drawable/white_back_round"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:text="Location Data"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Tap here to adjust Location on Map"
                android:textStyle="italic" />

            <fragment
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Data Source"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_back_round"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/datasource"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="State"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_back_round"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/state"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="City"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_back_round"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/city"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Location"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/location"
                android:inputType="textPostalAddress"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Address"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/address"
                android:inputType="textPostalAddress"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:text="Property Details"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Price Range"/>

            <com.warkiz.widget.IndicatorSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:isb_max="1000000"
                app:isb_min="200000"
                app:isb_progress="25"
                app:isb_seek_smoothly="true"
                app:isb_ticks_count="2"
                app:isb_show_tick_marks_type="oval"
                app:isb_tick_marks_size="13dp"
                app:isb_show_tick_texts="true"
                app:isb_tick_texts_size="15sp"
                app:isb_tick_texts_color="@color/colorPrimary"
                app:isb_thumb_color="@color/colorPrimary"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:isb_thumb_size="20dp"
                app:isb_show_indicator="rounded_rectangle"
                app:isb_indicator_color="@color/colorPrimary"
                app:isb_indicator_text_color="@color/white"
                app:isb_indicator_text_size="18sp"
                app:isb_track_background_color="@color/colorPrimary"
                app:isb_track_background_size="2dp"
                app:isb_track_progress_color="@color/colorPrimary"
                app:isb_track_progress_size="4dp"
                app:isb_only_thumb_draggable="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Unit Number"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/unit"
                android:inputType="textPersonName"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Condition"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/white_back_round"
                >

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:id="@+id/condition"
                    />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Chargeable Area (Sq.Ft.)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/chargeable"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Covered Area(Sq.Ft.)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/covered"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Carpet Area (Sq.Ft.)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/carpet"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Partition Lease Area"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:id="@+id/partition"

                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:id="@+id/yes"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:layout_marginStart="10dp"
                    android:id="@+id/no"
                    />


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Rent - Chargeable area(in Rs./Sq.Ft.)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/rent"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Security Deposit  (in months of Rent)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/security"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Common Area Maintenence -(Rs./Sq.Ft.)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/common"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Ceiling Height (in feet) (Floor to below the beam)"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/ceiling"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Façade/Frontage Length (in feet) "/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/facade"
                android:inputType="number"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:text="Images &amp; Tenants"
                android:background="@color/colorPrimaryDark"
                android:padding="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Tenant"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                android:id="@+id/tenant"

                >

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Occupied"
                    android:id="@+id/occupied"
                    />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vacant"
                    android:layout_marginStart="10dp"
                    android:id="@+id/vacant"
                    />


            </RadioGroup>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Tenant Name"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:padding="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:id="@+id/tenantname"
                android:inputType="textPersonName"
                android:background="@drawable/white_back_round"
                android:hint="tap to enter"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white2"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="Property Images"/>



        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>